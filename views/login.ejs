<body>
  <nav class="navbar navbar-expand-sm bg-light navbar-light">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/index.html">SEER</a>
      </li>
      <li class="nav-item">
        <form action="/" method="GET">
          <a class="nav-link" href="/">Home</a>
        </form>
      </li>
    </ul>
    <div class="btn-container">
      <form method="GET" action="/login">
        <button class="btn btn-info">Login</button>
      </form>
      <form action="/register" method="GET">
        <button class="btn btn-primary">Register</button>
      </form>
    </div>
  </nav>

  <div class="container">
    <form class="form-signin" id="login">
      <h2 class="form-signin-heading">Please sign in</h2>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus />

      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Password" required />

      <button class="btn btn-lg btn-primary btn-block" type="submit">
        Sign in
      </button>
    </form>

    <form method="GET" action="/submitter">
      <button class="btn btn-info">Submitter</button>
    </form>
    <form action="/analyst" method="GET">
      <button class="btn btn-primary">Analyst</button>
    </form>
  </div>
  <!-- /container -->

  <script src="http://libs.baidu.com/jquery/2.0.0/jquery.js"></script>

  <!-- <script src="/scripts/jquery-1.5.2.min.js"></script> -->

  <!-- <script src="scripts/test.js"></script> -->
  <script>
    $("#login").on("submit", function (e) {
      e.preventDefault();
      var formData = $(this).serialize();
      $.ajax({
        url: "/login",
        type: "post",
        data: formData,
        dataType: "json",
        success: function (data) {
          var err_code = data.err_code;
          if (err_code === 0) {
            window.alert("Login successfully");
            window.location.href = "/";
          } else if (err_code === 1) {
            window.alert("Error of email address or the password ");
          } else if (err_code === 500) {
            window.alert("Server error");
          }
        },
      });
    });
  </script>
</body>

</html>